void timeinit()//计时器初始化
{
    TCCR0 = 0x02;
	TCNT0 = 0;
	TCCR2 = 0x02;
	TCNT2 = 0;
}

void forward(int *p,int x)//进位
{
    if(*p == x)
	{
	    *p = 0;
	    *(p+1) = *(p+1) + 1;
	}
}

void delay(unsigned int x)//延时函数
{
    while(1)
	{
	    if(TCNT2 == x)
	    {
		    TCNT2 = 0;
			break;
		}
	}
}

void delay_ms()//ms级延时函数
{
    for(i=0;i<10;i++)//1ms
	{
	    while(1)
	    {
	        if(TCNT0 == 100)//100us
		    {
		        TCNT0 = 0;
		        break;
			}
		}
	}
}

