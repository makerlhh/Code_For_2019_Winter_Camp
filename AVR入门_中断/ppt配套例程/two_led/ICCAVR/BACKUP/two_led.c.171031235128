#include <iom128v.h>
#include <macros.h>
#define  uchar unsigned char
#define  uint  unsigned int
#pragma interrupt_handler INT:2       //外部中断0

uchar flag = 0 ;
void INT()
{
   flag++ ;
   PORTE|=BIT(0);
   EIFR |= BIT(INTF0) ;//清除中断标志位
}
void INT0_init()
{ 
   EICRA |= BIT(ISC01); //下降沿中断,先配置什么方式中断，再使能中断
   EIMSK |= BIT(INT0);  //配置INT0使能外部中断   
   SREG  |= BIT(7) ;    //开启总中断
}
void led_button_init()
{
   /*按键属入高电平*/
   DDRD&=~BIT(0);
   PORTD|=BIT(0);
   
   /*led输出低电平*/
   DDRE|=BIT(0);
   PORTE&=BIT(0);
   DDRE|=BIT(1);
   PORTE&=BIT(1);
}
void main()
{
   INT0_init() ;
   led_button_init() ;

}